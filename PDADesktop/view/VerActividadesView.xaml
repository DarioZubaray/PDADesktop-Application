                              HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Top"
                              Height="230" Width="900" ScrollViewer.VerticalScrollBarVisibility="Visible"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              ItemsSource="{Binding Path=AjustesConfirmados}"
                                  SelectedItem="{Binding Path=AdjustmentConfirmedSelected, Mode=TwoWay}"
                              AlternatingRowBackground="Gainsboro" AlternationCount="2">
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding ean}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Ean" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />

                                <DataGridTextColumn Binding="{Binding fechaAjuste}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Fecha" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />

                                <DataGridTextColumn Binding="{Binding motivo}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Motivo" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />

                                <DataGridTextColumn Binding="{Binding cantidad}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Cantidad" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBlock Text="No hay ajustes confirmados que mostrar." HorizontalAlignment="Center"
                                   VerticalAlignment="Stretch" Margin="300,100,300,0" Grid.Column="0" Grid.Row="1"
                                   Visibility="{Binding Items.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=dataGrid_AjustesConfirmados}" Width="300" />
                        </Grid>
                    </DockPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label VerticalAlignment="Bottom">Quitar todos</Label>
                        <Button ToolTip="Quitar Todos" x:Name="button_ajustes_quitar_todos" Command="{Binding RemoveAllAdjustmentCommand}"
                                Height="55" Width="55" Style="{DynamicResource MetroCircleButtonStyle}">
                            <Rectangle Width="25" Height="25" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_down}"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Button>
                        <Label VerticalAlignment="Center">Quitar seleccionado</Label>
                        <Button ToolTip="Quitar seleccionado" x:Name="button_ajustes_quitar" Command="{Binding RemoveOneAdjustmentCommand}"
                                Height="55" Width="55" Style="{DynamicResource MetroCircleButtonStyle}">
                            <Rectangle Width="25" Height="25" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_list_delete}"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Button>
                        <Label VerticalAlignment="Center">Agregar seleccionado</Label>
                        <Button ToolTip="agregar seleccionados" x:Name="button_ajustes_agregar" Command="{Binding AddOneAdjustmentCommand}"
                                Height="55" Width="55" Style="{DynamicResource MetroCircleButtonStyle}">
                            <Rectangle Width="25" Height="25" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_list_add_below}"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Button>
                        <Label VerticalAlignment="top">Agregar todos</Label>
                        <Button ToolTip="Agregar Todos" x:Name="button_ajustes_agregar_todos" Command="{Binding AddAllAdjustmentCommand}"
                                Height="55" Width="55" Style="{DynamicResource MetroCircleButtonStyle}">
                            <Rectangle Width="25" Height="25" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_up}"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Button>
                    </StackPanel>

                    <DockPanel>
                        <StatusBar DockPanel.Dock="Top" Background="{StaticResource TransparentStatusBar}">
                            <StatusBarItem HorizontalContentAlignment="Center">
                                <Label Content="Ajustes pendientes de confirmar" FontSize="14" FontFamily="Segoe UI"/>
                            </StatusBarItem>
                        </StatusBar>
                        <Grid DockPanel.Dock="Bottom">
                            <DataGrid x:Name="dataGrid_AjustesPendientes" Grid.Row="0" RowHeight="20" FontSize="11"
                              BorderThickness="1" BorderBrush="#ededed"
                              HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Top"
                              Height="230" Width="900" ScrollViewer.VerticalScrollBarVisibility="Visible"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              ItemsSource="{Binding Path=AjustesPendientes}"
                                      SelectedItem="{Binding Path=PendingAdjustmentSelected, Mode=TwoWay}"
                              AlternatingRowBackground="Gainsboro" AlternationCount="2">
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="1"/>
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding ean}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Ean" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />

                                <DataGridTextColumn Binding="{Binding fechaAjuste}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Fecha" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />

                                <DataGridTextColumn Binding="{Binding motivo}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Motivo" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />

                                <DataGridTextColumn Binding="{Binding cantidad}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
