                                    <DataGridTextColumn Binding="{Binding recepcion.numeroRemito}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="N° Remito" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />

                                    <DataGridTextColumn Binding="{Binding recepcion.FechaRemito}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
