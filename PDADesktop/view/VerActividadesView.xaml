                        </Grid>
                    </DockPanel>
                </StackPanel>
            </TabItem>

            <TabItem Header="Recepciones">
                <StackPanel>
                    <DockPanel>
                        <StatusBar DockPanel.Dock="Top" Background="{StaticResource TransparentStatusBar}">
                            <StatusBarItem HorizontalContentAlignment="Center">
                                <Label Content="Recepciones listas para ser informadas a Genesix" FontSize="14" FontFamily="Segoe UI"/>
                            </StatusBarItem>
                        </StatusBar>
                        <Grid DockPanel.Dock="Bottom">
                            <DataGrid x:Name="datagrid_recepcionesConfirmados" Grid.Row="1" RowHeight="20" FontSize="11"
                              BorderThickness="1" BorderBrush="#ededed"
                              HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Top"
                              Height="230" Width="900" ScrollViewer.VerticalScrollBarVisibility="Visible"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              ItemsSource="{Binding Path=RecepcionesConfirmadas}"
                                      SelectedItem="{Binding Path=ReceptionConfirmedSelected, Mode=TwoWay}"
                              AlternatingRowBackground="Gainsboro" AlternationCount="2">
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding recepcion.fechaRecepcion}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
