                                    <DataGridTextColumn Binding="{Binding recepcion.descripcionProveedor }" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Desc Prov" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock Text="No hay recepciones pendientes que mostrar." HorizontalAlignment="Center"
                                   VerticalAlignment="Stretch" Margin="200,100,200,0" Grid.Column="0" Grid.Row="1"
                                   Visibility="{Binding Items.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=datagrid_recepcionesPendientes}" Width="auto" />
                        </Grid>
                    </DockPanel>
                </StackPanel>
            </TabItem>

            <TabItem Header="Impresion de Etiquetas">
