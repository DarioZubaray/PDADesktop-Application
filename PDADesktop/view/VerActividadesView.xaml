                                <Label Content="Etiquetas listas para ser informadas a Genesix" FontSize="14" FontFamily="Segoe UI"/>
                            </StatusBarItem>
                        </StatusBar>
                        <Grid DockPanel.Dock="Bottom">
                            <DataGrid x:Name="datagrid_etiquetasConfirmados" Grid.Row="1" RowHeight="20" FontSize="11"
                              BorderThickness="1" BorderBrush="#ededed"
                              HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Top"
                              Height="230" Width="900" ScrollViewer.VerticalScrollBarVisibility="Visible"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              ItemsSource="{Binding Path=EtiquetasConfirmadas}"
                                      SelectedItem="{Binding Path=LabelConfirmedSelected, Mode=TwoWay}"
                              AlternatingRowBackground="Gainsboro" AlternationCount="2">
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding EAN}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="EAN" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />

                                    <DataGridTextColumn Binding="{Binding Fecha}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Fecha" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />

                                    <DataGridTextColumn Binding="{Binding CodigoEtiqueta}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Codigo de Etiqueta" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock Text="No hay impresion de etiquetas confirmadas que mostrar." HorizontalAlignment="Center"
                                   VerticalAlignment="Stretch" Margin="100,100,100,0" Grid.Column="0" Grid.Row="1"
                                   Visibility="{Binding Items.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=datagrid_etiquetasConfirmados}" Width="450" />
                        </Grid>
                    </DockPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Label VerticalAlignment="Bottom">Quitar todos</Label>
                        <Button ToolTip="Quitar Todos" x:Name="button_etiquetas_quitar_todos" Command="{Binding RemoveAllLabelCommand}"
                                Height="55" Width="55" Style="{DynamicResource MetroCircleButtonStyle}">
                            <Rectangle Width="25" Height="25" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_down}"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Button>
                        <Label VerticalAlignment="Center">Quitar seleccionado</Label>
                        <Button ToolTip="Quitar seleccionado" x:Name="button_etiquetas_quitar" Command="{Binding RemoveOneLabelCommand}"
                                Height="55" Width="55" Style="{DynamicResource MetroCircleButtonStyle}">
                            <Rectangle Width="25" Height="25" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_list_delete}"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Button>
                        <Label VerticalAlignment="Center">Agregar seleccionado</Label>
                        <Button ToolTip="agregar seleccionados" x:Name="button_etiquetas_agregar" Command="{Binding AddOneLabelCommand}"
                                Height="55" Width="55" Style="{DynamicResource MetroCircleButtonStyle}">
                            <Rectangle Width="25" Height="25" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_list_add_below}"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Button>
                        <Label VerticalAlignment="top">Agregar todos</Label>
                        <Button ToolTip="Agregar Todos" x:Name="button_recep_etiquetas_todos" Command="{Binding AddAllLabelCommand}"
                                Height="55" Width="55" Style="{DynamicResource MetroCircleButtonStyle}">
                            <Rectangle Width="25" Height="25" Fill="{Binding Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                                <Rectangle.OpacityMask>
                                    <VisualBrush Stretch="Fill" Visual="{StaticResource appbar_arrow_up}"/>
                                </Rectangle.OpacityMask>
                            </Rectangle>
                        </Button>
                    </StackPanel>

                    <DockPanel>
                        <StatusBar DockPanel.Dock="Top" Background="{StaticResource TransparentStatusBar}">
                            <StatusBarItem HorizontalContentAlignment="Center">
                                <Label Content="Etiquetas pendientes de confirmar" FontSize="14" FontFamily="Segoe UI"/>
                            </StatusBarItem>
                        </StatusBar>
                        <Grid DockPanel.Dock="Bottom">
                            <DataGrid x:Name="datagrid_etiquetasPendientes" Grid.Row="0" RowHeight="20" FontSize="11"
                              BorderThickness="1" BorderBrush="#ededed"
                              HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Top"
                              Height="230" Width="900" ScrollViewer.VerticalScrollBarVisibility="Visible"
                              AutoGenerateColumns="False" IsReadOnly="True"
                              ItemsSource="{Binding Path=EtiquetasPendientes}"
                                      SelectedItem="{Binding Path=PendingLabelSelected, Mode=TwoWay}"
                              AlternatingRowBackground="Gainsboro" AlternationCount="2">
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell">
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                    </Style>
                                </DataGrid.CellStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding EAN}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="EAN" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />

                                    <DataGridTextColumn Binding="{Binding Fecha}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Fecha" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />

                                    <DataGridTextColumn Binding="{Binding CodigoEtiqueta}" ClipboardContentBinding="{x:Null}" CanUserResize="False"
                                                    Header="Codigo de Etiqueta" HeaderStyle="{StaticResource DataGridColumnHeaderCentering}"
                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />
                                </DataGrid.Columns>
                            </DataGrid>
                            <TextBlock Text="No hay impresón de etiquetas pendientes que mostrar." HorizontalAlignment="Center"
                                   VerticalAlignment="Stretch" Margin="100,100,100,0" Grid.Column="0" Grid.Row="1"
                                   Visibility="{Binding Items.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}, ElementName=datagrid_etiquetasPendientes}" Width="auto" />
                        </Grid>
                    </DockPanel>
                </StackPanel>

            </TabItem>
        </TabControl>

        <StackPanel Margin="0,650,0, 0" Orientation="Horizontal" Width="auto" 
                    HorizontalAlignment="Stretch" Background="{StaticResource TransparentPanel}">
            <Border HorizontalAlignment="Center" Margin="374,0,0,0">
                <Button Style="{StaticResource MaterialDesignFlatButton}" 
                    ToolTip="Volver al centro de actividades"
                    Command="{Binding ReturnCommand}">
