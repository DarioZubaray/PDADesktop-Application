                                                    CellStyle="{StaticResource DataGridContentCellCentering}" Width="1*" />
                            </DataGrid.Columns>
                        </DataGrid>
                            <TextBlock Text="No hay ajustes pendientes que mostrar." Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="300,100,300,0"
