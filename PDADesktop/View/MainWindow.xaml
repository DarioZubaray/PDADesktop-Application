<Controls:MetroWindow x:Class="PDADesktop.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDADesktop.View"
        xmlns:VM="clr-namespace:PDADesktop.ViewModel"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Icon="../resources/favicon.ico"
        Title="PDA Desktop Application" Height="720" Width="850">
    <Window.DataContext>
        <VM:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Frame x:Name="frame" Source="LoginView.xaml" NavigationUIVisibility="Hidden" 
               HorizontalAlignment="Center" VerticalAlignment="Center"
               Height="720" Width="850"/>
    </Grid>
</Controls:MetroWindow>
